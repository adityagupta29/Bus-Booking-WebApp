<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <!-- <link rel="stylesheet" href="fonts/icomoon/style.css"> -->


    <!-- Bootstrap CSS -->
    <!-- <link rel="stylesheet" href="css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- Style -->

    <title>Login</title>

  
</head>

<body>
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 contents">
                    <div class="row justify-content-center" style="margin-top: 10%">
                        <div class="col-lg-4 col-12">
                            <p  style="text-align: center; margin-bottom: 50px; font-size: 32px; font-weight: 100; letter-spacing: 2px;">
                                Login</p>
                            <form action="/login" method="post">
                                <p style="margin-bottom: 5px; font-size: 12px; font-weight: 100; letter-spacing: 2px;">
                                    Email*</p>
                                <div class="form-group first">

                                    <input type="text" name="username" class="form-control" id="username">

                                </div>
                                <p style="margin-bottom: 5px; font-size: 12px; font-weight: 100;letter-spacing: 2px;">
                                    Password*</p>

                                <div class="form-group last mb-4">
                                    <input type="password" name="password" class="form-control" id="password">

                                </div>
                                <input style="background-color: #60C9C6; color: white" type="submit" value="Log In" class="btn">
                            </form>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js"></script>
</body>

</html>