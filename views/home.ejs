<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bus Book</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>

<body>
    <nav>
        <p class="brand">Bus Service</p>
        <% if(login == true) { %>
            <a class="nav-btn" href="/login">Dashboard</a>
        <% } %>
        <% if(login == false) { %>
            <a class="nav-btn" href="/dashboard">Login</a>
        <% } %>
    </nav>

    <div class="main">
        <p class="section-heading">Select Destination</p>
        <div class="search-bus-form">
            <form action="/searchbus">
                <input type="text" placeholder="From">
                <i class="bi bi-send"></i>
                <input type="text" placeholder="To">
                <button class="btn" type="submit">Search Bus</button>
            </form>
        </div>
        <p class="section-heading">Rated Search</p>
        <!-- --------bus------ -->
        <div class="buses">
            <div class="bus">
                <div class="bus-name">
                    Ravati Travels <span class="bus-type">NON-AC BUS</span>
                </div>
                <div class="bus-location">
                    <div class="bus-from">
                        Allahabad
                    </div>
                    <span><i class="bi bi-arrow-right-circle"></i></span>
                    <div class="bus-to">
                        Mirzapur
                    </div>
                </div>
                <div class="bus-rate">
                    <div class="bus-per-kilo">
                        Hourly Rate: 96₹/km
                    </div>
                    <div class="bus-booking">
                        Booking Rate: 400₹/day
                    </div>
                    
               </div>
            </div>

            <!-- ---new --------bus------ -->
            <% data.forEach(element => { %>
            <div class="bus">
                <div class="bus-name">
                    <%= element.name %> <span class="bus-type"><%= element.type %></span>
                </div>
                <div class="bus-location">
                    <div class="bus-from">
                        <%= element.from %>
                    </div>
                    <span><i class="bi bi-arrow-right-circle"></i></span>
                    <div class="bus-to">
                        <%= element.to %>
                    </div>
                </div>
                <div class="bus-rate">
                    <div class="bus-per-kilo">
                        Hourly Rate: <%= element.hourlyRate %>₹/km
                    </div>
                    <div class="bus-booking">
                        Booking Rate: <%= element.bookingRate %>₹/day
                    </div>
                    <form action="/bookbus" method="post">
                        <input style="display: none;" type="text" name="busNumber" value="<%= element.number %>">
                        <button type="submit" class="btn button" style="width: 120px;" >Book Now <i class="bi bi-check2-circle"></i></button>
                    </form>
                </div>
            </div>
            <% }) %>
            <!-- ---new --------bus------ -->
        </div>
        <!-- --------bus------ -->


    
    </div>

     

      <nav style="margin-top: 50vh;">
        <h1 class="footer-brand">Powered by Zinxed</h1>
    </nav>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
    </script>
</body>

</html>