<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <!-- <link rel="stylesheet" href="fonts/icomoon/style.css"> -->


    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <!-- <link rel="stylesheet" href="css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- Style -->
    <title>Login</title>

</head>

<body>
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 contents">
                    <div class="row justify-content-center" style="margin-top: 10%">
                        
                        <div class="col-lg-4 col-12">
                            <p  style="text-align: center; margin-bottom: 50px; font-size: 32px; font-weight: 100; letter-spacing: 2px;">
                                Register</p>
                            <form action="/register" method="post">
                                <div>
                                    <div>
                                        <p  style="margin-bottom: 5px; font-size: 12px; font-weight: 100; letter-spacing: 2px;">
                                            What's your email?</p>
                                        <div class="form-group first">
                                            <input type="text" placeholder="Enter your email" name="username"
                                                class="form-control" id="username">
                                        </div>
                                        <p style="margin-bottom: 5px; font-size: 12px; font-weight: 100; letter-spacing: 2px;">
                                            What's your Agency Name?</p>
                                        <div class="form-group first">
                                            <input type="text" placeholder="Enter your Agency Name" name="agencyname"
                                                class="form-control" id="username">
                                        </div>

                                        <p style="margin-bottom: 5px; font-size: 12px; font-weight: 100; letter-spacing: 2px;">
                                            Create a password</p>
                                        <div class="form-group first">
                                            <input type="password" placeholder="Create a password" name="password"
                                                class="form-control" id="password">
                                        </div>
                                        <button style="background-color: #60C9C6; color: white;" class="btn" type="submit">Create</button>
                                    </div>
                                </div>




                            </form>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

