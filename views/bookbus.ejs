<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bus Book</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>

<body>
    <nav>
        <p class="brand">Bus Service</p>

        <a class="nav-btn" href="/submit">Login</a>
    </nav>
    <% data.forEach(element => { %>

    <div class="main">
        <div class="buses">
            <div class="bus">
                <div class="bus-name">
                    <%= element.name %> <span class="bus-type"><%= element.type %></span>
                </div>
                <div class="bus-location">
                    <div class="bus-from">
                        <%= element.from %>
                    </div>
                    <span><i class="bi bi-arrow-right-circle"></i></span>
                    <div class="bus-to">
                        <%= element.to %>
                    </div>
                </div>
                <div class="bus-rate">
                    <div class="bus-per-kilo">
                        Hourly Rate: <%= element.hourlyRate %>₹/km
                    </div>
                    <div class="bus-booking">
                        Booking Rate: <%= element.bookingRate %>₹/day
                    </div>

                </div>
            </div>

            <!-- ---new --------bus------ -->
        </div>
        <!-- --------bus------ -->
        <div class="register-bus-main">
            <p class="section-heading">Confirm Booking</p>

            <div class="register-bus">
                <form action="/confirmbooking" method="post">
                    <input type="text" style="display: none;" name="busNumber" value="<%= element.number %>">
                    <input type="text" style="display: none;" name="busProviderEmail" value="<%= element.busProviderEmail %>">
                    <input type="text" style="display: none;" name="pickupLocation" value="<%= element.from %>">
                    <input type="text" style="display: none;" name="dropLocation" value="<%= element.to %>">
                    <input type="text" placeholder="Name" name="name">
                    <input type="text" placeholder="Contact Number" name="contact">
                    <input type="text" placeholder="Date" name="date">
                    <input type="text" placeholder="Time" name="time">
                    <button type="submit" class="btn button" style="width: 200px;">Book Now<i
                            class="bi bi-check2-circle"></i></button>
                </form>

            </div>
        </div>
    </div>
    <% }) %>


    <nav style="margin-top: 50vh;">
        <h1 class="footer-brand">Powered by Zinxed</h1>
    </nav>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
    </script>
</body>

</html>